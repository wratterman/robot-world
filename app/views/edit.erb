<form action="/robots/<%= @robot.id %>" method="post">
  <p>Edit</p>
  <input type="hidden" name="_method" value="PUT" />
  <input type='text' name='robot[name]' value="<%= @robot.name %>"/><br/>
  <input name='robot[city]'><%= @robot.city %></input><br/>
  <input name='robot[state]'><%= @robot.state %></input><br/>
  <input name='robot[department]'><%= @robot.department %></input><br/>
  <input type='submit'/>
</form>
